<TaskNameLabel>
    color: (0, 0, 0, 1)
    padding: 2, 0
    size: root.texture_size
    text_size: None, None
    font_name: 'meiryo.ttc'
    font_size: 11
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: root.pos
            size: root.texture_size


<TooltipLabel>
    orientation: 'vertical'
    pos: self.pos
    Label:
        pos: root.pos
        text: root.text
        color: (0, 0, 0, 1)
        padding: 2, 0
        size: self.texture_size
        text_size: None, None
        font_name: 'meiryo.ttc'
        font_size: 11
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos: root.pos
                size: self.texture_size
