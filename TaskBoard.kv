#:kivy 1.9.1
#:import kivy kivy
#:import Window kivy.core.window.WindowBase

Board:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size
    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Image:
            size_hint: None, None
            size: 24, 24
            source: 'data/logo/kivy-icon-24.png'
        Label:
            height: 24
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'Kivy %s - Task Board' % kivy.__version__

<SelectBox>:
    size_hint: None, None
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.1
        Rectangle:
            size: self.size

<Task>:
    size: box.size
    size_hint: None, None
    canvas.before:
        Color:
            rgba: (1, 1, 1, 0.3) if self.hovered else (1, 1, 1, 0.2)
        Rectangle:
            size: self.size if self.hovered or self.selected else (0,0)
    BoxLayout:
        id: box
        orientation: 'vertical'
        size: 100, 60
        Image:
            id: image
            source: root.icon_source
        Label:
            id: label
            text: root.task_name
            size_hint_y: 0.5
            valign: 'top'
            halign: 'center'
            text_size: self.size
#            text_size: (None, None) if root.hovered else self.size
            font_name: 'meiryo.ttc'
#            font_name: 'msgothic.ttc'
            font_size: 11

<MenuModal>
    size_hint: None, None
    size: 100, 30
    BoxLayout:
        orientation: 'vertical'
        size: 100, 30
        Button:
            id: close
            text: root.title
            font_name: 'meiryo.ttc'
            font_size: 11
#             dismiss() on_press makes touch event reach a background widget
#             because on_press works on_touch_down
            on_release: root.func()
            on_release: root.dismiss()

<TooltipLabel>
    color: (0, 0, 0, 1)
    padding: 2, 0
    size: root.texture_size
    text_size: None, None
    font_name: 'meiryo.ttc'
    font_size: 11
    size_hint: None, None
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: root.pos
            size: root.texture_size


